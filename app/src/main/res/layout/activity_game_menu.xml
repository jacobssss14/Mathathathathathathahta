<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.mathrio.matthathathatha.GameMenu">

    <Button
        android:id="@+id/button5"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:text="Resume Game"
        android:textColor="@color/colorTextMain"
        android:background="@color/colorButton1"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="66dp"
        android:layout_marginBottom="43dp"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:id="@+id/button6"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:text="Restart Game"
        android:background="@color/colorButton2"
        android:textColor="@color/colorTextMain"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="162dp"
        android:layout_marginBottom="110dp"
        android:layout_above="@+id/button7p"
        android:layout_alignLeft="@+id/button7p"
        android:layout_alignStart="@+id/button7p" />

    <Button
        android:id="@+id/button7p"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:text="End Game"
        android:textColor="@color/colorTextMain"
        android:background="@color/colorButton3"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="258dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>
